<div class="container">
  <h2 class="user-title">すべてのユーザー</h2>

  <div class="column">
    <% @users.each do |user| %>
      <div class="row">
        <div class="col-2 offset-1">
          <p class="user-icon"><%= link_to image_tag(user.profile_image), user_path(user) %></p>
        </div>
        <div class="col-5">
          <label class="user-name"><%= link_to user.name, user_path(user) %></label>
          <p><%= user.introduction %></p>
        </div>
        <div class="col-2">
          <%= link_to "フォローする", class:"btn btn-outline-primary btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>

</div>